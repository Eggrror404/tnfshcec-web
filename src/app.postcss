/* Write your global styles here, in PostCSS syntax */
html,
body {
  @apply h-full overflow-hidden;
}

.prose {
  @apply prose-headings:font-normal;
}

.prose a.permalink {
  @apply opacity-0 pl-2 transition-all text-sm no-underline leading-4;
}

.prose :is(h1, h2, h3, h4, h5, h6):hover a.permalink {
  @apply opacity-100;
}

